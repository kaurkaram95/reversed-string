#include <iostream>
#include <string>
using namespace std;

int main() {
    string input, reversed;

    // Input string from the user
    cout << "Enter a string: ";
    getline(cin, input);

    // Reverse the string
    for (int i = input.length() - 1; i >= 0; i--) {
        reversed += input[i];
    }

    // Display the reversed string
    cout << "Reversed string: " << reversed << endl;

    return 0;
}
